<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/animes/results.css">
  <%- include('../partials/nav') %>
    <main>
        <h1 class="neonText">Search Results</h1>
          <%anime.forEach(anime => {%>
            <h2><%= anime.title%></h2>
            <img src="<%= anime.image_url%>" alt='<%= anime.name %> '>
            <p> Synopsis:<br> <%= anime.synopsis %></p>
            <h2>Type:<br>  <%= anime.type %></h2>
            <h2>
              Episodes:<br> <%= anime.episodes %>
            </h2>
            <h2>
              Score <br> <%= anime.score %>
            </h2>
            <form action="/profiles/anime" method="POST">
            <input type="text" name="title" hidden value="<%= anime.title %> ">
            
            <input type="text" name="malId" hidden value="<%= anime.mal_id %> ">
            
            <input type="text" name="score" hidden value="<%= anime.score  %> ">
            
            <input type="text" name="episodes" hidden value="<%= anime.episodes %> ">
            
            
            <input type="text" name="imageUrl" hidden value="<%= anime.image_url%>">
            <input type="text" name="synopsis" hidden value="<%= anime.synopsis%>">
            <button class="btn" type="submit">Add to Collection</button>
            </form>
          <% }) %>
    </main>
    
    <%- include('../partials/footer') %>