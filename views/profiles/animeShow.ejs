<%- include('../partials/html-head') %>

<link rel="stylesheet" href="/stylesheets/profiles/animeShow.css">

  <%- include('../partials/nav') %>
    <main>
      <h1>Anime Details</h1>
      <h2>
        <%= anime.title%>
      </h2>
      <img src="<%= anime.imageUrl%>" alt='<%= anime.name %> '>
      <p>
        <%= anime.synopsis %>
      </p>
      <h2>
        <%= anime.type %>
      </h2>
      <h2>
        <%= anime.episodes %>
      </h2>
      <h2>
        <%= anime.score %>
      </h2>
        <h2>Reviews</h2>
        <% if (user) { %>
          <form action="/profiles/<%= profile._id %>/anime/<%= anime._id %>/reviews" method="POST">
              <label for="content-textarea">Review:</label>
              <textarea name="content" id="content-textarea"></textarea>
              <label for="rating-select">Rating:</label>
              <select name="rating" id="rating-select">
                <option disabled selected value> -- select an option -- </option>
                <option value="‚≠ê">‚≠ê</option>
                <option value="‚≠ê‚≠ê">‚≠ê‚≠ê</option>
                <option value="‚≠ê‚≠ê‚≠ê">‚≠ê‚≠ê‚≠ê</option>
                <option value="‚≠ê‚≠ê‚≠ê‚≠ê">‚≠ê‚≠ê‚≠ê‚≠ê</option>
                <option value="‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê">‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê</option>
              </select>
              <button type="submit">Add Review</button>
            </form>
              <% } %>
              <% if (anime.reviews.length) { %>
                  <h2>
                  <%= user? "You have" : `${profile.name} has`%> reviews! Here they are!
                </h2> 
                <table>
                  <thead>
                    <tr>
                      <th>Date</th>
                      <th>Review</th>
                      <th>Rating</th>
                    </tr>
                  </thead>
                  <tbody>
                      <% anime.reviews.forEach(function(review){ %>
                          <tr>
                            <td>
                              <%= review.createdAt.toLocaleDateString() %>
                            </td>
                            <td>
                              <%= review.content %>
                            </td>
                            <td>
                              <%= review.rating %>
                            </td>
                            <td>
                              <% if (user.profile._id.equals(profile._id)) { %>
                                <form action="/profiles/<%= profile._id %>/anime/<%= anime._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                                  <button class="btn" type="submit">Delete üíÄ</button>
                                </form>
                                <% } %>
                            </td>
                          </tr>
                      <% }) %>
                  </tbody>
                </table>
                <% } else { %>
                  <h3>No Reviews Yet</h3>
                  <% } %>
    </main>
    <%- include('../partials/footer') %>