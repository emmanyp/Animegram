    <h1>My Anime</h1>
    <% profile.anime.forEach(anime=> { %>
      <div>
        <a href="/profiles/<%= profile._id %>/anime/<%= anime._id %>">
          <h2>
            <%= anime.title %>
          </h2>
          <img src="<%= anime.imageUrl %>" alt="<%= anime.name %>">
        </a>
      </div>
      <% if (user.profile._id.equals(profile._id)) { %>
        <form action="/profiles/<%= profile._id %>/anime/<%= anime._id %>?_method=DELETE" method="POST">
          <button class="btn" type="submit">Delete this AnimeðŸ’€</button>
        </form>
        <% } %>
      <% }) %>

    

